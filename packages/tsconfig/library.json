{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Library",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
