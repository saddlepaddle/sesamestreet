{
    "name": "turborepo-basic-shared",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "storybook": "turbo run storybook --parallel",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": "^8.0.2",
        "prettier": "^2.8.0",
        "pretty-quick": "^3.1.3",
        "turbo": "1.6.3"
    },
    "turbo": {
        "pipeline": {
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    "dist/**",
                    ".next/**"
                ]
            },
            "lint": {
                "outputs": []
            },
            "dev": {
                "cache": false
            }
        }
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    }
}
